{
  "compilerOptions": {
    "target": "ES6",                   // JavaScript version to compile to
    "module": "commonjs",              // Module system used by Node.js
    "outDir": "./dist",                // Output directory for compiled JS
    "rootDir": "./src",                // Root directory for TypeScript files
    "esModuleInterop": true,           // Allow importing non-ESM modules like Express
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],           // Include TypeScript files from the src folder
  "exclude": ["node_modules"]           // Exclude node_modules folder
}
